<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TopBarFragment">

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30 PM"
        android:textSize="18sp"
        android:layout_margin="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/icon_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_bluetooth"
        android:layout_margin="18dp"
        app:layout_constraintEnd_toStartOf="@+id/icon_network"
        app:layout_constraintTop_toTopOf="@id/timeTV"
        app:layout_constraintBottom_toBottomOf="@id/timeTV"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/icon_network"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_network"
        android:layout_margin="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/timeTV"
        app:layout_constraintBottom_toBottomOf="@id/timeTV"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>